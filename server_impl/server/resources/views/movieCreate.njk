{% extends "layout" %}

{% block content %}
<h2>Add movie</h2>

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Errors</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}


<form class="form-horizontal" method="post">

  {{ csrfField }}

  <div class="form-group">
    <label for="name" class="col-lg-2 control-label">Movie title</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="title" name="title" placeholder="title" value="{{old('title')}}">
    </div>
  </div>
  <div class="form-group">
    <label for="ingredients" class="col-lg-2 control-label">Director</label>
    <div class="col-lg-10">
      <textarea class="form-control" rows="1" id="director" name="director">{{old('director')}}</textarea>
      <span class="help-block">Write down the director who made the movie</span>
    </div>
  </div>
  <div class="form-group">
    <label for="ingredients" class="col-lg-2 control-label">Description</label>
    <div class="col-lg-10">
      <textarea class="form-control" rows="3" id="description" name="description">{{old('description')}}</textarea>
    </div>
  </div>
  <div class="form-group">
    <label for="ingredients" class="col-lg-2 control-label">Price</label>
    <div class="col-lg-10">
      <input type="number" class="form-control" id="price" name="price">{{old('price')}}</textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="submit" class="btn btn-default">Add</button>
    </div>
  </div>
</form>

{% endblock %}